@model Examen2daUnidad.Models.Task

@{
    ViewData["Title"] = "Delete";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<h1 class="text-center" style="color:whitesmoke">Eliminar Tarea</h1>
<h3 class="text-center" style="color:whitesmoke">¿Esta Seguro que desea eliminar esta Tarea?</h3>
<hr />
<div class="text-center ">
    <p>
        <a asp-action="Index" class="btn btn-outline-warning" style="width:auto;">Regresar a la Lista de Tareas</a>
    </p>
</div>

<body style="background-color:black">
    <div class="container">
        <div class="container-fluid">
            <a class="navbar-brand">MENU</a>
        </div>
        <div class="row">
            <div class="col-lg-4">

                <div class="col-sm-5 col-md-6">

                    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a asp-controller="Categories" asp-action="Index" class="nav-link " data-bs-target="#v-pills-profile" type="button" aria-controls="v-pills-home" aria-selected="true"><i class="fas fa-edit"></i> Lista de Categorias</a>
                        <a asp-controller="Tasks" asp-action="Index" class="nav-link active" data-bs-target="#v-pills-profile" type="button" aria-controls="v-pills-home" aria-selected="false"><i class="fas fa-edit"></i> Tareas</a>

                    </div>
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab"></div>
                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab"></div>
                        <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab"></div>
                        <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab"></div>
                    </div>
                </div>

            </div>


            <div class="col-lg-8">
                <div class="col-md-4">

                    <div style="border:groove;border-radius:30px; width:700px;text-align:center">
                        <h4 style="color: white; text-align: center;margin-top:20px">Información de la tarea</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2" style="color:white; font-size:20px;text-align:center;margin-left:50px">
                                @Html.DisplayNameFor(model => model.Description)
                                <br />
                            </dt>
                            <dd class="col-sm-10" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayFor(model => model.Description)<br />
                            </dd>
                            <hr />
                            <dt class="col-sm-2" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayNameFor(model => model.StartDate)
                            </dt>
                            <dd class="col-sm-10" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayFor(model => model.StartDate)
                            </dd>
                            <dt class="col-sm-2" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayNameFor(model => model.FinishDate)
                            </dt>
                            <dd class="col-sm-10" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayFor(model => model.FinishDate)
                            </dd>
                            <dt class="col-sm-2" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayNameFor(model => model.Category)
                            </dt>
                            <dd class="col-sm-10" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                                @Html.DisplayFor(model => model.Category.CategoryName)
                            </dd>
                        </dl>
                        <br />
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="TaskId" />
                            <input type="submit" value="Eliminar" class="btn btn-outline-danger" style="margin-bottom:40px" />

                        </form>

                    </div>


                </div>
            </div>
        </div>
    </div>






</body>

