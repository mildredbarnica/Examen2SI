@model IEnumerable<Examen2daUnidad.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<h1 class="text-center" style="color:whitesmoke">Listas Agrupadas</h1>

<div class="text-center ">
    <p>
        <a class="btn btn-outline-success" asp-action="Create">Nueva Lista</a>
    </p>
</div>


<body style="background-color:black">
    <div class="container">
        <div class="container-fluid">
            <a class="navbar-brand">MENU</a>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="col-sm-5 col-md-6">
                    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a asp-controller="Categories" asp-action="Index" class="nav-link active" data-bs-target="#v-pills-profile" type="button" aria-controls="v-pills-home" aria-selected="true"><i class="fas fa-edit"></i> Lista de Categorias</a>
                        <a asp-controller="Tasks" asp-action="Index" class="nav-link " data-bs-target="#v-pills-profile" type="button" aria-controls="v-pills-Task" aria-selected="false"><i class="fas fa-edit"></i> Tareas</a>

                    </div>
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">...</div>
                        <div class="tab-pane fade" id="v-pills-Task" role="tabpanel" aria-labelledby="v-pills-profile-tab">...</div>
                        <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">...</div>
                        <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">...</div>
                    </div>
                </div>

            </div>

            <div class="col-lg-8">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-action="TaskOfCategory" asp-route-id="@item.CategoryId">Tareas</a>
                                    <a class="btn btn-outline-light" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</body>
