@model Examen2daUnidad.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<h1 class="text-center" style="color:whitesmoke">Eliminar Lista</h1>
<h3 class="text-center" style="color:whitesmoke">¿Esta Seguro que desea eliminar esta Lista?</h3>
<div class="text-center ">
    <p>
        <a asp-action="Index" class="btn btn-outline-warning" style="width:auto;">Regresar a la Lista</a>
    </p>
</div>
<body style="background-color:black">
    <div class="container">

        <div class="container-fluid">
            <a class="navbar-brand">MENU</a>
        </div>

        <div class="row">
            <div class="col-lg-4">

                <div class="col-sm-5 col-md-6">

                    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a asp-controller="Categories" asp-action="Index" class="nav-link active" data-bs-target="#v-pills-profile" type="button" aria-controls="v-pills-home" aria-selected="true"><i class="fas fa-edit"></i> Lista de Categorias</a>
                        <a asp-controller="Tasks" asp-action="Index" class="nav-link " data-bs-target="#v-pills-profile" type="button" aria-controls="v-pills-home" aria-selected="false"><i class="fas fa-edit"></i> Tareas</a>

                    </div>
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab"></div>
                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab"></div>
                        <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab"></div>
                        <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab"></div>
                    </div>
                </div>

            </div>

            <div class="col-lg-8">
                <div style="border:groove;border-radius:30px; width:700px;text-align:center">
                    <h4 class="text-center" style="color:whitesmoke">Category</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2" style="color:white; font-size:20px;text-align:center;margin-left:50px">
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd class="col-sm-10" style="color: white; font-size: 20px; text-align: center; margin-left: 50px">
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoryId" />
                        <br />
                        <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
                        
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</body>




